    "@aws-sdk/client-mwaa": "^3.54.1",
    "@aws-sdk/client-ses": "^3.56.0",
    "@aws-sdk/types": "^3.55.0",
    "@types/config": "0.0.40",
    "@types/md5": "^2.3.2",
    "@types/swagger-jsdoc": "^6.0.1",
    "axios": "^0.24.0",
    "body-parser": "^1.19.2",
    "config": "^3.3.7",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "excel4node": "^1.2.1",
    "exceljs": "^4.3.0",
    "express": "^4.17.3",
    "express-validator": "^6.14.0",
    "handlebars": "^4.7.7",
    "joi": "^17.11.0",
    "jsonwebtoken": "^8.5.1",
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.5.23",
    "md5": "^2.3.0",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "ncp": "^2.0.0",
    "nodemailer": "^6.7.3",
    "pg": "^8.7.3",
    "qs": "^6.10.3",
    "random": "^3.0.6",
    "reflect-metadata": "^0.1.13",
    "snowflake-sdk": "^1.6.8",
    "socket.io": "^4.7.5",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "^0.2.45",
    "winston": "^3.6.0",
    "winston-daily-rotate-file": "^4.6.1"
  },
