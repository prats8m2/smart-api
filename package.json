{
  "name": "smart-app-api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/app.js",
  "scripts": {
    "prepare": "husky install",
    "prebuild": "eslint --fix . --ext .ts && prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "clean": "rm -rf ./dist",
    "copy-files": "mkdir ./dist/public && ncp ./public ./dist/public && ncp .env ./dist/.env",
    "build": "npm run clean && tsc && npm run copy-files",
    "prestart": "npm run build",
    "start": "node ./dist/src/app.js",
    "test": "mocha test/*",
    "dev": "nodemon --watch 'src/**/*.ts' --exec  ts-node src/app.ts",
    "local": "nodemon --watch src/**/*.ts --exec  NODE_ENV=local ts-node src/app.ts",
    "dev:sync": "nodemon --watch 'src/**/*.ts' --exec DB_SYNC='true' ts-node src/app.ts 'true' ",
    "dev:clear": "DB_CLEAR='true' ts-node src/app.ts",
    "local:sync": "nodemon --watch 'src/**/*.ts' --exec DB_SYNC='true' NODE_ENV=local ts-node src/app.ts 'true' ",
    "local:clear": "NODE_ENV=local DB_CLEAR='true' ts-node src/app.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint --fix . --ext .ts",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "deploy": "pm2 stop all && git pull && npm run prebuild && rm -rf ./dist && tsc && mkdir ./dist/public && ncp ./public ./dist/public && pm2 start dist/src/app.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
